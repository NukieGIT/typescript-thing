{
  "scripts": {
    "start": "snowpack dev",
    "watch:styles": "sass src/styles/scss/:public/css/ --watch",
    "watch:prettier": "npx onchange \"**/*\" -- prettier --write \"src/**/*.{ts,js}\" {{changed}}",
    "build": "snowpack build && sass src/styles/scss/:public/css/ --style=compressed",
    "test": "echo \"This template does not include a test runner by default.\" && exit 1",
    "format": "prettier --write \"src/**/*.{ts,js}\"",
    "lint": "prettier --check \"src/**/*.{ts,js}\""
  },
  "devDependencies": {
    "@snowpack/plugin-typescript": "^1.2.1",
    "@types/snowpack-env": "^2.3.3",
    "prettier": "^2.2.1",
    "sass": "^1.55.0",
    "snowpack": "^3.3.7",
    "typescript": "^4.2.4"
  }
}
